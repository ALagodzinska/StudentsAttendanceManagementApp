@model IEnumerable<AttendanceApp.UI.StudentModel>

<p>
    <a href='@Url.Action("Create", "Student")' class="btn btn-outline-secondary"><img class="buttonIcon" src="~/Images/add.png" /> Create New Student</a>
</p>
<table id="indexList" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentGroupID)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentGroupID)
            </td>
            <td>
                <a href='@Url.Action("Update", new { id = item.Id })' class="btn btn-light btn-sm"><img class="buttonIcon" src="~/Images/edit.png" /> Edit</a>
                <a href='@Url.Action("Delete", new { id = item.Id })' class="btn btn-light btn-sm"><img class="buttonIcon" src="~/Images/delete.png" /> Delete</a>                
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a href='@Url.Action("Index", "Home")' class="btn btn-light"><img class="returnButtonIcon" src="~/Images/return.png" /> Back To Home Page</a>
</div>
