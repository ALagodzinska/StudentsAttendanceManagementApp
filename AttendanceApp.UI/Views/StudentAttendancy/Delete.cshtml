@model AttendanceApp.UI.StudentAttendancyModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>StudentAttendancyModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReportID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReportID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsPresent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPresent)
        </dd>
    </dl>

    <form asp-action="Delete">
        @Html.HiddenFor(m => m.ReportID)
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
    </form>
    <br />
    <div>
        <a href='@Url.Action("Index", new { id = Model.ReportID})' class="btn btn-light"><img class="returnButtonIcon" src="~/Images/return.png" /> Back To Student Attendance List</a>
    </div>
</div>
