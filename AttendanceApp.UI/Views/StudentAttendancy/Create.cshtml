@model AttendanceApp.UI.StudentAttendancyModel

<h4>StudentAttendancyModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReportID" class="control-label labelTitle"></label>
                <input asp-for="ReportID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Student" class="control-label labelTitle"></label>
                @Html.DropDownListFor(
                student => student.Student.Id,
                ViewData["Students"] as SelectList,
                "Please select student",
                new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Student.Id, "Please select student.", new { @class = "text-danger" })
            </div>
                <div class="form-group form-check">
                    <label class="form-check-label labelTitle">
                        <input class="form-check-input" asp-for="IsPresent" /> @Html.DisplayNameFor(model => model.IsPresent)
                    </label>
                </div>
            <div class="form-group">
                <input type="submit" value="Save Student Attendance" class="btn btn-secondary" />
            </div>
</form>
    </div>
</div>
<div>
    <a href='@Url.Action("Index", new { id = Model.ReportID})' class="btn btn-light"><img class="returnButtonIcon" src="~/Images/return.png" /> Back To Student Attendance List</a>
</div>


