@model AttendanceApp.UI.StudentAttendancyModel

<h4>StudentAttendancyModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Id)
        <div class="row">
            <div class="form-group col-sm">
                @Html.DisplayFor(modelItem => Model.Student.Title)
                @Html.HiddenFor(m => m.Student.Id)
            </div>
            @Html.HiddenFor(m => m.ReportID)
            <div class="form-group form-check col-sm">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPresent" /> @Html.DisplayNameFor(model => model.IsPresent)
                </label>
            </div>
        </div>
                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-secondary" />
                </div>
        </form>
    </div>
</div>
<div>
    <a href='@Url.Action("Index", new { id = Model.ReportID})' class="btn btn-light"><img class="returnButtonIcon" src="~/Images/return.png" /> Back To Student Attendance List</a>
</div>

